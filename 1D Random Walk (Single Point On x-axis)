"1D Brownian Motion (Single Point on x-axis)"

from matplotlib import pyplot as plt
from matplotlib.animation import FuncAnimation
import numpy as np
import random

#Creates Plot
figure, ax = plt.subplots()
ax.set_xlim(-20, 20)
ax.set_ylim(-1, 1)

#To represent single moving point
scatter = ax.scatter(0,0,c ="blue")

#Intial position, can be altered
p0=0

#Generated random walk data and continually overrides the scatter plot to only display a single point
def oneD_rand_walk(samples: int):
    
    global p0
    n=random.randrange(-1,2,2)
    p0+=n

    scatter.set_offsets([p0,0])   
    return scatter,

#Animation
ani = FuncAnimation(figure,
                          func = oneD_rand_walk,
                          frames = np.arange(0, 50),
                          )
ani.save('Brownian_Motion.gif',writer='pillow',fps=5) 
plt.show()
